{
  "manifest_version": 3,
  "name": "Chrome To-Do List",
  "version": "1.1",
  "description": "A simple Chrome extension that injects a to-do list directly into every webpage.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["scripts/content.css"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}